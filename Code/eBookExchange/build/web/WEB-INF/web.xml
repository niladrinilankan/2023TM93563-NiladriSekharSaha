        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
            <name>SID</name>
            <max-age>18000</max-age>
        </cookie-config>
    </session-config>-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
